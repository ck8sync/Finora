{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/package.json", "api/.env"], "installCommand": "npm install --prefix api" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/client/$1" }
  ]
}